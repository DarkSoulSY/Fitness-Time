<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SearchProductFragment"
    android:orientation="vertical"
    style="@style/FragmentBackground">

    <TextView
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="25sp"
        android:textColor="@color/accent"
        android:layout_gravity="center"/>
    <EditText
        android:id="@+id/search_engine"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Apple?"/>

    <RelativeLayout
        android:id="@+id/search_first_container"
        android:visibility="invisible"
        android:layout_margin="15dp"
        android:background="@drawable/dashboard_container_theme"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/search_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:text="Apple"
            android:textColor="@color/accent"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories"
                android:textSize="15sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/search_product_calories"
                android:textColor="@color/accent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="260"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_gravity="center"/>

        </LinearLayout>


    </RelativeLayout>

    <Button
        android:visibility="invisible"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:id="@+id/search_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"/>



</LinearLayout>