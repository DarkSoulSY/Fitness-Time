<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.SettingsFragment"
    android:orientation="vertical"
    style="@style/FragmentBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Switch
                    android:id="@+id/settings_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_brightness_medium_24"/>


            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilepicture"
                android:layout_height="90dp"
                android:layout_width="90dp"
                android:layout_marginBottom="40dp"
                android:src="@drawable/userempty"
                android:layout_gravity="center"/>
            
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/settings_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/on_background"
                android:backgroundTint="@color/Primary_Dark"
                android:layout_margin="10dp"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/settings_calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calories"
                android:textColor="@color/on_background"
                android:backgroundTint="@color/Primary_Dark"
                android:layout_margin="10dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/settings_macros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Macros"
                android:textColor="@color/on_background"
                android:backgroundTint="@color/Primary_Dark"
                android:layout_margin="10dp"
                />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit your meteric information"
                android:textColor="@color/on_background"
                android:backgroundTint="@color/Primary_Dark"
                android:layout_margin="10dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/settings_about"
                android:textColor="@color/on_background"
                android:backgroundTint="@color/Primary_Dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About"
                android:layout_margin="10dp"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>